package fernuni.propra.internal_data_model;


public class Wall {
	private final Point p1;
	private final Point p2;
	
	public Wall(Point p1, Point p2) {
		this.p1 = p1;
		this.p2 = p2;
	}
	
	public Point getP1() {
		return p1;
	}
	
	public Point getP2() {
		return p2;
	}
	
	boolean isNorthWall() {
		return p1.getX() > p2.getX() && (p1.getY() == p2.getY());
	}
	
	boolean isWestWall() {
		return p1.getY() < p2.getY() && (p1.getX() == p2.getX());
	}
	
	boolean isSouthWall() {
		return p1.getX() < p2.getX() && (p1.getY() == p2.getY());
	}
	
	boolean isEastWall() {
		return p1.getY() < p2.getY() && (p1.getX() == p2.getX());
	}

	boolean overlapsXrange(int xLow, int xHigh) {
		return (Math.min(p1.getX(), p2.getX()) < xHigh) || 
				(Math.max(p1.getX(), p2.getX())>xLow);
	}
	
	boolean overlapsYrange(int yLow, int yHigh) {
		return (Math.min(p1.getY(), p2.getY()) < yHigh) || 
				(Math.max(p1.getY(), p2.getY())>yLow);
	}
	
	private boolean isPerpendicularToLine(Point p1, Point p2) {
		
		return (this.p2.getX()-this.p2.getX()) * (p1.getX()-p2.getY())
	}
	
}
