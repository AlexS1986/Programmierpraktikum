package fernuni.propra.algorithm.runtime_information;
/**
 * An interface that allows classes to declare that they can
 * be used to store runtime information for the
 * overall runtime.
 * <p>
 * Implementing classes: {@link RuntimeInformation}
 * <p>
 * Extended interfaces: {@link IRuntimeCandidateSearcher}, {@link IRuntimeCandidateSearcher}
 * <p>
 * @author alex
 *
 */
public interface IRuntimeInformation extends IRuntimeCandidateSearcher, 
	IRuntimePositionOptimizer, IRuntimeIlluminationTester, IRuntimeReader{
	void startTime() throws RuntimeExceptionLamps;
	void stopTime() throws RuntimeExceptionLamps;
}
