	}
	
	private static boolean agrees(double x, double x1) {
		return Math.abs()<TOL;
	}
	
	private boolean isInRange(double x, double x1, double x2) {
		return (Math.min(x1, x2) < x + TOL) && (Math.max(x1, x2) > x - TOL);				
	}
	


}
